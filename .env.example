# Database Configuration
MONGODB_URI=mongodb://localhost:27017/abuja-emall
DATABASE_URL=mongodb://localhost:27017/abuja-emall

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Pinata Configuration (IPFS Storage)
PINATA_JWT=your-pinata-jwt-token-here
PINATA_GATEWAY=your-gateway-domain.mypinata.cloud
PINATA_API_KEY=your-pinata-api-key-here
PINATA_SECRET_KEY=your-pinata-secret-key-here

# Legacy NFT.Storage (deprecated)
NFTUP_API_KEY=your-nft-storage-api-key-here

# Cloudinary Configuration (if still using for some assets)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Application Configuration
PORT=3000
NODE_ENV=development

# Payment Configuration
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# File Upload Limits
MAX_FILE_SIZE=15728640  # 15MB in bytes
MAX_FILES_PER_UPLOAD=10